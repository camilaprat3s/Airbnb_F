<%= simple_form_for @accessory do |f| %>
  <%= f.input :image %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :category, collection: Accessory::CATEGORY %>
  <%= f.input :condition, collection: Accessory::CONDITION %>

  <%= f.submit "Create Accessory" %>
<% end %>
