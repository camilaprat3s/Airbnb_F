<%= simple_form_for @object do |f| %>
  <%= f.input :image, as: :file %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :category, collection: Accessory::CATEGORY %>
  <%= f.input :condition, collection: Accessory::CONDITION %>
  <%= f.submit "Update Accessory" %>
<% end %>
